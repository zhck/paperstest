<h3>List of articles</h3>

<%= form_tag( articles_path, :method => :get) %>

  <%= text_field_tag 'tag' %>
  <div>
    <%= submit_tag "filter" %>
  </div>

<%= will_paginate %>
  <% @articles.each do |article| %>
    <div class="articles_list round">
      <p> Title: <%= link_to  article.title, article_path(article.id) %> </p>
      <p> Author: <%= link_to article.author.name, user_path(article.author.id) %> </p>
      <p> Creation date: <%= article.created_at %> </p>
    </div>
  <% end %>
<%= will_paginate %>
